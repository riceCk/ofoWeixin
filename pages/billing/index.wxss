/* pages/billing/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.number, .endride{
  flex: 2;
  width: 100%;
  text-align: center;
}
.number{
  padding: 60px 0;  
}
.time{
  flex: 6;
  width: 100%;
  text-align: center;
}
.time .time-content{
  font-size: 100rpx;
  font-weight: 600;
  padding-top: 20px;
}
.endride button{
  margin-top: 15rpx;
  width: 90%;
}